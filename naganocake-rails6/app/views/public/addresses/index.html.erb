<h1>配送先登録/一覧</h1>
<%= form_with model: Address.new do |f| %>

  <%= f.label :zip_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :zip_code %><br>

  <%= f.label :address, "住所" %>
  <%= f.text_field :address %><br>

  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %>

  <%= f.submit "新規登録" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.zip_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address) %>
          <%= link_to "削除する", address_path(address), method: :delete  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>