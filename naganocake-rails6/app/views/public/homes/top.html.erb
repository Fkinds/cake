<table>
  <tr>
    <th>ジャンル検索</th>
  </tr>

  <%= form_with url: items_path, method: :get do |f| %>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, items_path(genre_id: genre.id), method: :get %></td>
      </tr>
    <% end %>
  <% end %>
</table>


<h1>新着商品</h1>

<% @items.each do |item| %>
  <% if item.is_sold == false %>
      <%= link_to item_path(item) do %>
      <%= image_tag item.get_item_image(100,100) %><br>
      <label>商品名</label>
      <%= item.name %><br>
      <label>￥</label>
      <%= item.tax_price %><br>
      <% end %>
  <% end %>
<% end %>