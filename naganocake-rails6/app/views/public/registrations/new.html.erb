<h2>新規登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: @customer %>

  <div class="field">
    <%= f.label :family_name, "名前　(姓)" %>
    <%= f.text_field :family_name %>
    <%= f.label :given_name, "(名)" %>
    <%= f.text_field :given_name %>
  </div>

  <div class="field">
    <%= f.label :family_name_kana, "フリガナ　(セイ)" %>
    <%= f.text_field :family_name_kana %>
    <%= f.label :given_name_kana, "(メイ)" %>
    <%= f.text_field :given_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :zip_code, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :zip_code %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>

    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
